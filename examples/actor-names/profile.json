{
  "schemaVersion": "0.14",
  "fields": [
    {
      "name": "forename",
      "type": "string",
      "nullable": false
    },
    {
      "name": "surname",
      "type": "string",
      "nullable": false
    }
  ],
  "rules": [
    {
      "constraints": [
        {
          "anyOf": [
            {
              "field": "forename",
              "equalTo": "Matt"
            },
            {
              "field": "forename",
              "equalTo": "Ryan"
            }
          ]
        },
        {
          "if": {
            "field": "forename",
            "equalTo": "Matt"
          },
          "then": {
            "field": "surname",
            "equalTo": "Damon"
          },
          "else": {
            "field": "surname",
            "inSet": [
              "Reynolds",
              "Gosling"
            ]
          }
        }
      ]
    }
  ]
}